# Production Environment Variables
# IMPORTANT: Keep this file secure and never commit to version control
# Use strong, randomly generated values for all secrets

# === Django Settings ===
DEBUG=False
DJANGO_SETTINGS_MODULE=project_config.settings.production
SECRET_KEY=change-me-to-a-long-random-string-in-production
ENVIRONMENT=production

# === Allowed Hosts ===
# Comma-separated list of domain names your app will be hosted on
ALLOWED_HOSTS=api.example.com,www.example.com

# === CORS Settings ===
CORS_ALLOWED_ORIGINS=https://app.example.com,https://www.example.com
CSRF_TRUSTED_ORIGINS=https://app.example.com,https://www.example.com

# === SSL/Security ===
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# === Database ===
DB_ENGINE=django.db.backends.postgresql
DB_NAME=email_campaign_db_prod
DB_USER=postgres_prod
DB_PASSWORD=change-me-to-a-strong-password
DB_HOST=postgres
DB_PORT=5432
DATABASE_URL=postgresql://postgres_prod:change-me-to-a-strong-password@postgres:5432/email_campaign_db_prod

# === Redis ===
REDIS_URL=redis://:change-me-to-a-strong-password@redis:6379/0
REDIS_PASSWORD=change-me-to-a-strong-password
REDIS_PORT=6379

# === Celery ===
CELERY_BROKER_URL=redis://:change-me-to-a-strong-password@redis:6379/1
CELERY_RESULT_BACKEND=redis://:change-me-to-a-strong-password@redis:6379/2
CELERY_WORKERS=4
CELERY_PREFETCH_MULTIPLIER=4
CELERY_MAX_TASKS_PER_CHILD=1000

# === Email Configuration ===
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@example.com
ADMIN_EMAIL=admin@example.com

# === AWS SES (Alternative Email Provider) ===
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SES_REGION_NAME=us-east-1
AWS_SES_REGION_ENDPOINT=email.us-east-1.amazonaws.com

# === Logging ===
LOG_LEVEL=INFO
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# === API Keys & Tokens ===
JWT_SECRET_KEY=change-me-to-a-long-random-string
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# === Storage ===
USE_S3=False
AWS_STORAGE_BUCKET_NAME=
AWS_S3_CUSTOM_DOMAIN=
AWS_S3_SIGNATURE_VERSION=s3v4

# === Rate Limiting ===
THROTTLE_RATE_ANON=100/hour
THROTTLE_RATE_USER=1000/hour
THROTTLE_RATE_ADMIN=5000/hour

# === Docker Settings ===
DOCKER_REGISTRY=docker.io
VERSION=1.0.0
