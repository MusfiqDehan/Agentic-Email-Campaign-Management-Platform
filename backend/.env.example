# Django Settings
DEBUG=True
DJANGO_SETTINGS_MODULE=config.settings.development
SECRET_KEY=your-super-secret-key-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,*.example.com

# Database Configuration
DB_ENGINE=django.db.backends.postgresql
DB_NAME=email_campaign_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=postgres
DB_PORT=5432
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/email_campaign_db

# Redis Configuration
REDIS_PASSWORD=redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://:redis@redis:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://:redis@redis:6379/1
CELERY_RESULT_BACKEND=redis://:redis@redis:6379/2

# Email Provider Configuration (AWS SES)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_SES_REGION_NAME=us-east-1
AWS_SES_CONFIGURATION_SET=your-config-set-name

# Application Settings
APP_PORT=8000
FRONTEND_URL=http://localhost:3000

# Email Settings
DEFAULT_FROM_EMAIL=noreply@example.com
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# SMTP Configuration (if not using AWS SES)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True

# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-key@sentry.io/your-project-id

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
